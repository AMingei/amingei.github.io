#lefter
  position fixed
  width 400px
  height 100%
  perspective 400px
  transform rotateY(90deg)
  transform-style preserve-3d
  transform-origin left
  transition transform 1s

#left-bar
  width 100%
  height 110%
  margin-top -10%
  transform rotateY(10deg)
  transform-origin left
  transition transform 0.8s
  background clr-background-tran
  box-shadow 40px 0 40px clr-shadow

#left-panel
  position absolute
  margin 30% 10%
  color white

#panel-datetime
  font-size 18px
  cursor default

#panel-nickname
  font-size 24px
  cursor default

.panel-nav
  font-family "Britannic", "宋体"
  font-weight bold
  font-size 24px
  text-decoration none
  color white

.panel-nav>div
  width 225px
  height 46px
  margin-top 15px
  padding 5px
  background clr-background
  box-shadow 5px 5px 10px clr-shadow
  border 2px solid white
  filter brightness(140%)
  transition all 0.4s
  &:hover
    filter brightness(260%)
    transform translateX(26px)
    text-shadow 0 0 2px black

#ethan
  position absolute
  top 80px
  left 240px
  width 446px
  height 720px
  clip-path url(#svgtest)
  cursor pointer

#ethan>img
  content url(ethan-path)
  position absolute
  width 446px
  height 717px
  top -1px
  left -2px
  opacity 0
  transition opacity 1.8s ease 0.4s

#svg
  position fixed
  pointer-events none
  opacity 0